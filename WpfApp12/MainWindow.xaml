<Window x:Class="WpfApp12.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp12"
        mc:Ignorable="d"
        Title="Test Application" Height="450" Width="800">
    <Grid>
        <ListBox ItemsSource="{Binding Questions}">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel>
                        <Image Source="{Binding QuestionImage}" Width="200" Height="200"/>
                        <ComboBox ItemsSource="{Binding Options}" SelectedIndex="{Binding UserAnswerIndex, Mode=TwoWay}" />
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
        <Button Content="Submit" Command="{Binding SubmitCommand}" Width="100" Height="50" Margin="543,96,157,288"/>
        <TextBlock Text="{Binding Result.PercentageCorrect}" Width="100" Height="20" Margin="543,274,157,140"/>
        <TextBlock Text="{Binding Result.Passed}" Width="100" Height="20" Margin="519,335,181,79"/>
    </Grid>
</Window>